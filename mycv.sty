\newcommand{\simpleheader}[6]{
\tikz[remember picture,overlay] {%
% Shift the header position up by adjusting the yshift value
\node[rectangle, fill=#1, anchor=north, minimum width=\paperwidth, minimum height=4.0cm, yshift=0.5cm] (header) at (current page.north) {};%
\node[draw=none, align=left] (name) at (header) {%
{\Huge \color{#2} #4 \textbf{#5} }%
};%
\node[draw=none, below, yshift=-0.4cm] (titles) at (name.south) {\color{#2}#6};%
}\vspace{-0.7cm}%
}

\newcommand{\descriptiveheader}[7]{
\tikz[remember picture,overlay] {%
% Shift the header position up by adjusting the yshift value
\node[rectangle, fill=#1, anchor=north, minimum width=\paperwidth, minimum height=9.4cm, yshift=3.5cm] (header) at (current page.north) {};%
\node[draw=none, align=left] (name) at (header) {%
{\Huge \color{#2} #4 \textbf{#5} }%
};%
\node[draw=none, below, yshift=-0.4cm] (titles) at (name.south) {\color{#2}#6};%
% Draw the separator
\draw[thick, #3] ($(titles.south west)+(4.4,-0.3)$) -- ($(titles.south east)+(-4.4,-0.3)$);%
% Add the description
\node[draw=none, below, align=center, text width=18cm, minimum height=2.5cm, yshift=0cm] (description) at ($(titles.south)+(0,-0.5)$) {\color{#2}#7};%
\draw[thick, #3] ($(header.south west)+(0,0)$) -- ($(header.south east)+(0,0)$);
}\vspace{1.8cm}%
}


