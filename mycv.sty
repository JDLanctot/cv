% ORCid symbol
\newcommand{\orcidbubble}[4]{%
\scalebox{1.3}{%
\begin{tikzpicture}
\draw[#1, fill=#1] (0,0.16) circle (0.2 cm) node[#2] {\fontfamily{qag}\selectfont\tiny iD};
% Check if the 5th argument is empty
\ifx&#4&%
    % If 4th argument is empty, place the 3rd as is
    \node[right=0.2cm, align=left] at (0,0) {\text{#3}};
\else
    % If 4th argument is not empty, place the 3th and then the 4th below it
    \node[right=0.2cm, align=left] at (0,0.15) {\text{#3}};
    \node[right=0.2cm, align=left] at (0,-0.15) {\text{#4}};
\fi
\end{tikzpicture}%
}%
}

